#!/bin/bash

declare clean=no
declare release=no

while [[ "${1}" != "" ]]
do
    case "${1}" in
        -c|--clean            ) clean=yes;   shift; ;;
        -r|--release|--nodebug) release=yes; shift; ;;
        -d|--debug            ) release=no;  shift; ;;
                             *) ;;
    esac
done

if [[ "${clean}" == "yes" ]]
then
    flutter clean
fi

if [[ "${release}" == "yes" ]]
then
    flutter run -d macos --release
else
    flutter run -d macos
fi
